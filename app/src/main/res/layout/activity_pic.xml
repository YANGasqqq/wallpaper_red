<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wallpaper_red.PicActivity">
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/pic_iv_bg"
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/llContainer"
        android:layout_marginBottom="110dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
 <LinearLayout
    android:padding="15dp"
     android:layout_marginBottom="300dp"
     android:layout_alignParentBottom="true"
     android:layout_alignParentRight="true"
     android:orientation="vertical"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content">

     <TextView
         android:gravity="center"
         android:textColor="@color/white"
         android:text="0"
         android:id="@+id/pic_like"
         android:drawableTop="@drawable/ic_like"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
     <ImageView
         android:layout_marginTop="15dp"
         android:id="@+id/pic_collect"
         android:background="@drawable/ic_collect"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
 </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:paddingLeft="25dp"
        android:id="@+id/pic_btn"
        android:textColor="@color/black"
        android:paddingRight="25dp"
        app:rippleColor="@android:color/transparent"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="设置壁纸"
        app:cornerRadius="20dp"

        android:layout_width="150dp"
        android:layout_height="wrap_content"/>
</RelativeLayout>